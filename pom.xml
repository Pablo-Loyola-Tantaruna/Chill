            <organization>Zetta</organization>
            <timezone>America/Lima</timezone>
            <roles>
                <role>Software Developer</role>
            </roles>
        </developer>
    </developers>

    <ciManagement>
        <system>Bamboo</system>
    </ciManagement>

    <issueManagement>
